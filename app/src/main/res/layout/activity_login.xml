<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent" tools:layout_editor_absoluteY="81dp">

    <TextView
            android:text="Ingresa tu ID:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView35"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginBottom="25dp"
            app:layout_constraintBottom_toTopOf="@+id/TxtIngresaTuID"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/TxtIngresaTuID"
            android:visibility="visible" android:hint="User name"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="66dp" app:layout_constraintBottom_toTopOf="@+id/TxtPassword"/>
    <TextView
            android:text="Password:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView38"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="19dp"
            app:layout_constraintTop_toBottomOf="@+id/TxtIngresaTuID"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/TxtPassword"
            android:visibility="visible"
            android:hint="Password"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginBottom="18dp"
            app:layout_constraintBottom_toTopOf="@+id/btnSalirApp"/>
    <Button
            android:text="Entrar a tu App"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnIngresarLogin"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:visibility="visible"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginEnd="29dp"
            android:layout_marginRight="29dp" app:layout_constraintEnd_toEndOf="@+id/TxtPassword"/>
    <TextView
            android:text="Bienvenido a tu Calendario  academico de Duoc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView39"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="33dp" android:layout_marginRight="33dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <ImageButton
            android:src="@android:drawable/ic_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnSalirApp"
            android:tint="@color/colorAccent"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginEnd="28dp"
            android:layout_marginRight="28dp" app:layout_constraintEnd_toEndOf="parent"/>
    <ImageView
            android:layout_width="130dp"
            android:layout_height="144dp"
            android:id="@+id/imageView2"
            android:adjustViewBounds="false"
            android:visibility="visible" android:background="@drawable/login4"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="48dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/textView39" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/textView35"/>
</android.support.constraint.ConstraintLayout>